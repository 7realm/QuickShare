<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@android:color/white" />

            <stroke
                android:width="1dp"
                android:color="@color/rounded_border" />

            <corners android:radius="5dp" />
        </shape>
    </item>
    <item android:padding="5dp">
        <shape android:shape="rectangle" >
            <padding                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <gradient
                android:angle="270"
                android:endColor="@color/table_first"
                android:startColor="@color/table_second" />

            <corners android:radius="5dp" />
        </shape>
    </item>

</layer-list>