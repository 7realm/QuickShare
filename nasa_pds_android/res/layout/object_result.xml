<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/objectCaptionView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/objectCaption"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="10dp" />

        <Button
            android:id="@+id/objectCompareButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Add to compare" />
    </RelativeLayout>

    <ListView
        android:id="@+id/objectReferenceList"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true" >
    </ListView>

    <FrameLayout
        android:id="@+id/objectView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/objectReferenceList"
        android:layout_below="@id/objectCaptionView" >

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="next" />
    </FrameLayout>

</RelativeLayout>