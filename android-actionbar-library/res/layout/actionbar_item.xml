<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ActionBarItem"
    android:background="@drawable/background_actionbar_button" >

    <TextView
        android:id="@+id/actionBarItemText"
        style="@style/ActionBarItemCaption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Remove" />

    <ImageView
        android:id="@+id/actionBarItemImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/actionBarItemText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>